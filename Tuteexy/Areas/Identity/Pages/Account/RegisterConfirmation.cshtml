@page
@model RegisterConfirmationModel
@{ ViewData["Title"] = "Register confirmation"; }

<div class="row justify-content-center align-content-center">
    <div class="col-sm-10 col-md-10 p-4">
        <section>
            <h3>
                @ViewData["Title"]
            </h3>
            
                @{ if (@Model.DisplayConfirmAccountLink)
                    {
                        <a id="confirm-link" class="btn btn-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a> }
                    else
                    {
                        <h5> Please check your email to confirm your account.</h5>
                    } 
                }
        </section>
    </div>
</div>