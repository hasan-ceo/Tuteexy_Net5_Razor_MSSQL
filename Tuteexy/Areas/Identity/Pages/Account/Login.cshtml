@page "/Login"
@model LoginModel

<div class="row justify-content-center align-content-center">
    <div class="col-sm-10 col-md-10 p-4">
        <section>
            <form id="account" method="post" class="inplgnin">
                <p class="lead">Welcome Back</p>
                <div class="form-group my-1">
                    <input type="text" class="form-control form-control-sm" asp-for="Input.UserName" aria-describedby="emailHelp"
                           placeholder="Enter your User ID..." required>
                </div>
                <div class="form-group my-1">
                    <input type="password" class="form-control form-control-sm" asp-for="Input.Password"
                           placeholder="Enter your Password..." required>
                </div>
                <div class="form-group my-1">
                    <button type="submit" class="btn btn-primary btn-sm btn-block">Log in</button>
                    <a id="forgot-password" class="btn btn-link btn-sm w-100" asp-page="./ForgotPassword">Forgot your password?</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
