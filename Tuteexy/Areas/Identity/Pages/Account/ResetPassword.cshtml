@page "/ResetPassword"
@model ResetPasswordModel
@{ ViewData["Title"] = "Reset password"; }

<div class="row justify-content-center align-content-center">
    <div class="col-sm-10 col-md-10 p-4">
        <section>
            <form method="post" class="inplgnin">
                <input asp-for="Input.Code" type="hidden" />
                <p class="lead">Reset your password.</p>
                <div class="form-group my-1">
                    <input type="text" class="form-control form-control-sm" asp-for="Input.Email" aria-describedby="emailHelp"
                           placeholder="Enter your User ID..." required>
                </div>
                <div class="form-group my-1">
                    <input type="password" class="form-control form-control-sm" asp-for="Input.Password"
                           placeholder="Enter Password..." required>
                </div>
                <div class="form-group my-1">
                    <input type="password" class="form-control form-control-sm" asp-for="Input.ConfirmPassword"
                           placeholder="Enter confirm password..." required>
                </div>
                <div class="form-group my-1">
                    <button type="submit" class="btn btn-success btn-sm btn-block">Reset</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
