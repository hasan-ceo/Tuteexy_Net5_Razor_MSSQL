@page "/Error"
@model ErrorModel
@{ ViewData["Title"] = "Error"; }

<div class="row justify-content-center align-content-center">
    <div class="col-sm-10 col-md-10 p-4">
        <section>
            <h3>
                @ViewData["Title"]
            </h3>
            <h5>
                @if (Model.ShowRequestId)
                {
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                }
            </h5>
        </section>
    </div>
</div>

