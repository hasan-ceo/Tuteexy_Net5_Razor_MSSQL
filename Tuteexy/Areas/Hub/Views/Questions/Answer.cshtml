@model Tuteexy.Models.ViewModels.QuestionVM

<div class="row row-cols-1">
    <div class="col-12">
        <div class="card bg-ask mb-2">
            <div class="card-body text-white">
                <h3 class="card-title">Question and Answer</h3>
            </div>
        </div>
    </div>
</div>

@if (Model != null)
{
    <div class="row row-cols-1">
        <div class="col-12">
            <div class="card bg-ask mb-2">
                <div class="card-header text-white-50">
                    <p class="card-subtitle" style="font-size:smaller">@Model.Question.User.FullName, @Model.Question.SubmittedDate</p>
                </div>
                <div class="card-body text-white">
                    <p class="card-title">@Model.Question.Description</p>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Question.IsReplyClose == false)
    {
        <div class="row row-cols-1">
            <div class="col-12">
                <div class="card bg-ask mb-2">
                    <div class="card-body text-dark">
                        <form method="post" autocomplete="off" asp-area="Hub" asp-controller="Questions" asp-action="Answer">
                            <input type="hidden" id="QuestionID" name="QuestionID" value="@Model.Question.QuestionID" />
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Reply</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" id="Description" name="Description" required></textarea>
                                </div>
                            </div>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="submit" class="btn btn-success">
                                    <span class="fas fa-save"></span>
                                    Post
                                </button>
                                <a class="btn btn-light" asp-area="Hub" asp-controller="Dashboard" asp-action="Index">
                                        <span class="fas fa-undo"></span>
                                        Close
                                    </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row row-cols-1">
        @foreach (QuestionThread item in Model.QuestionThread)
        {
            <div class="offset-2 col-10">
                <div class="card bg-ask mb-2">
                    <div class="card-header text-white-50">
                        <p class="card-subtitle" style="font-size:smaller">@item.User.FullName, @item.SubmittedDate</p>
                    </div>
                    <div class="card-body text-white">
                        <p class="card-title">@item.Description</p>
                        @*@if (item.UserID == Model.UserId)
                        {
                            <p class="text-right my-0">
                                <a class="btn btn-danger" asp-area="Hub" asp-controller="Questions" asp-action="DeleteAnswer" asp-route-id="@item.QuestionThreadID">
                                    <span class="fas fa-trash-alt"></span>
                                    Delete
                                </a>
                            </p>
                        }*@

                    </div>
                </div>
            </div>
        }
    </div>

}