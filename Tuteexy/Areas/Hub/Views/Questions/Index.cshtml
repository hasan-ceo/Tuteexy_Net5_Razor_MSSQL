
@{ ViewData["Title"] = "All Questions"; }

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row justify-content-between">
                        <div class=" col-7">
                            <h5 class="card-title">My Questions List</h5>
                        </div>
                        <div class="col-3">
                            <a class="btn btn-success w-100" asp-area="Hub" asp-controller="Questions" asp-action="Upsert"><span class="fas fa-plus-circle"></span> New</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tblData" class="table table-striped table-sm table-hover table-full-width table-font-size">
                            <thead class="thead-dark">
                                <tr>
                                    <th></th>
                                    <th>Description</th>
                                    <th>Is Reply Close</th>
                                    <th>Is Offensive</th>
                                    <th>Is Approved</th>
                                    <th>Submitted Date</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/hub/questions.js"></script>
    @* <partial name="_DeleteScriptsPartial" />*@
}
