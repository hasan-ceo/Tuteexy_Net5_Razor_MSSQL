@model Tuteexy.Models.ShortStory

@section Scripts {
    <partial name="_tinymceScriptPartial" />
}

<div class="card">
    <div class="card-body px-0">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" autocomplete="off" asp-route-returnUrl=""  enctype="multipart/form-data">
            <input type="hidden" asp-for="ShortStoryID" />

            <div class="form-group">
                <label class="col-sm-12 col-form-label" asp-for="Title">Title</label>
                <div class="col-sm-12">
                    <input class="form-control" type="text" asp-for="Title" required>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-12 col-form-label" asp-for="Description">Description</label>
                <div class="col-sm-12">
                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-12 col-form-label" asp-for="ImageUrl">Image</label>
                <div class="col-sm-12">
                    <input type="file" name="files" id="uploadBox" class="form-control" accept="image/*" />
                </div>
            </div>

            <div class="form-check ml-3">
                <input type="checkbox" class="form-check-input" asp-for="IsReplyClose">
                <label class="form-check-label" asp-for="IsReplyClose">Comments Close</label>
            </div>

            <div class="btn-group  ml-3" role="group" aria-label="Basic example">
                @if (Model.ShortStoryID != 0)
                {
        <button type="submit" class="btn btn-success" asp-route-id="@Model.ShortStoryID">
            <span class="fas fa-save"></span>
            Update
        </button> }
    else
    {
        <button type="submit" class="btn btn-success">
            <span class="fas fa-save"></span>
            Post
        </button>}
                <button class="btn btn-light" asp-area="Hub" asp-controller="ShortStories" asp-action="MyStories">
                    <span class="fas fa-undo"></span>
                    Close
                </button>
            </div>
        </form>
    </div>
</div>

