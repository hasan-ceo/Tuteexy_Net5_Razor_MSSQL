@model Tuteexy.Models.Page

@{ var title = "Create Page"; }

@section Scripts {
    <partial name="_tinymceScriptPartial" />
}

<div class="card">
    <div class="card-header">
        <div class="card-title">
            @if (Model.PageID != 0)
            {
                //edit
                title = "Edit Page";
            }
            @title
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" autocomplete="off" asp-route-returnUrl="">
            <input type="hidden" asp-for="PageID" />

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="PageName">Name</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="PageName">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Description">Description</label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>
            </div>



            <div class="btn-group" role="group" aria-label="Basic example">
                @if (Model.PageID != 0)
                {
                    <button type="submit" class="btn btn-success" asp-route-id="@Model.PageID">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-success">Create</button>
                }
                <button class="btn btn-light" asp-area="Ironman" asp-controller="Pages" asp-action="Index">Cancel</button>
            </div>
        </form>
    </div>
</div>

