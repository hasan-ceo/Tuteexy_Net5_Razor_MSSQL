@model Tuteexy.Models.ViewModels.ShortStoryVM

<div class="row row-cols-1">
    <div class="col-12">
        <div class="card bg-Alabaster mb-2">
            <div class="card-body text-black-50">
                <h3 class="card-title">ShortStory and Comments</h3>
            </div>
        </div>
    </div>

</div>
@if (Model != null)
{
<div class="row row-cols-1">
        <div class="col-12">
            <div class="card bg-dark mb-2">
                <div class="card-header text-white-50">
                    <p class="card-subtitle" style="font-size:smaller">@Model.ShortStory.Title</p>
                    <p class="card-subtitle" style="font-size:smaller">@Model.ShortStory.User.FullName, @Model.ShortStory.SubmittedDate</p>
                </div>
                <div class="card-body text-white">
                    <p class="card-text">@Html.Raw(Model.ShortStory.Description)</p>
                </div>
            </div>
        </div>
</div>

@if (Model.ShortStory.IsReplyClose == false)
{
<div class="row row-cols-1">
    <div class="col-12">
        <div class="card bg-Alabaster mb-2">
            <div class="card-body text-dark">
                <form method="post" autocomplete="off" asp-area="Ironman" asp-controller="ShortStories" asp-action="Answer">
                    <input type="hidden" id="ShortStoryID" name="ShortStoryID" value="@Model.ShortStory.ShortStoryID" />
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Reply</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="Description" name="Description" required></textarea>
                        </div>
                    </div>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="submit" class="btn btn-success">
                            <span class="fas fa-save"></span>
                            Post
                        </button>
  
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
}

<div class="row row-cols-1">
    @foreach(ShortStoryThread item in Model.ShortStoryThread)
    {
        <div class="offset-2 col-10">
            <div class="card bg-secondary mb-2">
                <div class="card-header text-white-50">
                    <p class="card-subtitle" style="font-size:smaller">@item.User.FullName, @item.SubmittedDate</p>
                </div>
                <div class="card-body text-white">
                    <p class="card-title">@item.Description</p>
                   
                </div>
            </div>
        </div>
    }
</div>

}

