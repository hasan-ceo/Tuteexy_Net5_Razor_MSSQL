    <title>Tuteexy - For Student, Develop by Student</title>
    <link rel="icon"
          href="/Images/core/icon.png"
          sizes="any"
          type="image/svg+xml" />

    <link rel="stylesheet" href="~/css/grid.css" />
    <link rel="stylesheet" href="~/css/helpers.css" />
