@model IEnumerable<Tuteexy.Models.SchoolNotice>
@*--Top Breadcrumb--*@
<div class="breadcrumb is-small is-white" aria-label="breadcrumbs">
    <ul>
        <li>
            <a asp-area="Lms"
               asp-controller="SchoolNotices"
               asp-action="index"><strong>School Notice</strong></a>
        </li>
        <li class="is-active"><a href="#" class="has-text-white" aria-current="page"><strong>Index</strong></a></li>
    </ul>
</div>

@*-- Top Level*@
<div class="level">
    @*-- Left side --*@
    <div class="level-left">
        <div class="level-item">
            <div class="title has-text-white">
                <strong>School Notice</strong>
            </div>
        </div>
    </div>

    @*-- Right side --*@
    <div class="level-right">
        <div class="buttons has-addons is-centered">
        </div>
    </div>
</div>


<div class="columns is-multiline">
    @foreach (SchoolNotice item in Model)
    {
    <div class="column is-4-desktop">
        <div class="notification is-danger">
            <p class="title is-4 py-0 my-0 has-text-black">@item.Title</p>
            <div class="content">
                @Html.Raw(item.Description)
            </div>
        </div>
    </div>}
</div>