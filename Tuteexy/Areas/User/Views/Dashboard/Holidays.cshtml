@model IEnumerable<Tuteexy.Models.Holiday>

<!-- Top Breadcrumb -->
<div class="breadcrumb is-small is-white" aria-label="breadcrumbs">
    <ul>
        <li>
            <a asp-area="Lms"
               asp-controller="Holidays"
               asp-action="index"><strong>Holidays</strong></a>
        </li>
        <li class="is-active"><a href="#" class="has-text-white" aria-current="page"><strong>Index</strong></a></li>
    </ul>
</div>

<!-- Top Level -->
<div class="level">
    <!-- Left side -->
    <div class="level-left">
        <div class="level-item">
            <div class="title has-text-white">
                <strong>Holiday's List</strong>
            </div>
        </div>
    </div>

    <!-- Right side -->
    <div class="level-right">

    </div>
</div>

<!-- Table -->
<div class="table-container has-background-info-light px-2 py-2 mb-0">
    <table id="tblData" class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth display compact">
        <thead class="has-background-grey-light">
            <tr>
                <th><abbr title="N:">School Name</abbr></th>
                <th><abbr title="S:">Date Start</abbr></th>
                <th><abbr title="E:">Date End</abbr></th>
                <th><abbr title="H:">Holiday Name</abbr></th>
                <th><abbr title="H:">Duration</abbr></th>


            </tr>
        </thead>
        <tbody>
            @foreach (Holiday item in Model)
            {
<tr>
    <td>@item.School.SchoolName</td>
    <td>@item.DateStart.Date.ToString("dd/MMM/yyyy")</td>
    <td>@item.DateEnd.Date.ToString("dd/MMM/yyyy")</td>
    <td>@item.HolidayName</td>
    <td>@item.Duration</td>

</tr>            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script src="~/js/user/myholidays.js"></script>
    @* <partial name="_DeleteScriptsPartial" />*@
}
