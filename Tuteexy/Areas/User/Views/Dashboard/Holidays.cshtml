@model IEnumerable<Tuteexy.Models.Holiday>

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Holiday's List</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tblData" class="table table-striped table-sm table-hover table-full-width table-font-size">
                            <thead class="thead-dark">
                                <tr>

                                    <th><abbr title="N:">School Name</abbr></th>
                                    <th><abbr title="S:">Date Start</abbr></th>
                                    <th><abbr title="E:">Date End</abbr></th>
                                    <th><abbr title="H:">Holiday Name</abbr></th>
                                    <th><abbr title="H:">Duration</abbr></th>



                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Holiday item in Model)
                                {
                    <tr>
                        <td>@item.School.SchoolName</td>
                        <td>@item.DateStart.Date.ToString("dd/MMM/yyyy")</td>
                        <td>@item.DateEnd.Date.ToString("dd/MMM/yyyy")</td>
                        <td>@item.HolidayName</td>
                        <td>@item.Duration</td>

                    </tr>}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

