@model Tuteexy.Models.ViewModels.UserCreateVM

@{ var title = "Add Teacher";
 ViewData["Title"] = title; }
<!-- Main container -->

<partial name="_StatusMessage" for="StatusMessage" />

<div class="card">
    <div class="card-header">
        <div class="card-title">
            @title
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" autocomplete="off" asp-area="Lms" asp-controller="UserCreates" asp-action="TeacherAdd">
            <input type="hidden" asp-for="SchoolID" />

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Name">Name</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="Name">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Email">Email</label>
                <div class="col-sm-10">
                    <input class="form-control" type="email" asp-for="Email">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="PhoneNumber">Phone Number</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="PhoneNumber">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Password">Password</label>
                <div class="col-sm-10">
                    <input class="form-control" type="password" asp-for="Password">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ConfirmPassword">Confirm Password</label>
                <div class="col-sm-10">
                    <input class="form-control" type="password" asp-for="ConfirmPassword">
                </div>
            </div>

            <div class="form-group row">
                <h5 class="col-sm-12 card-subtitle">
                    By clicking <em>Add Teacher</em> you agree to our <a asp-area="Front" asp-controller="Home" asp-action="Page" asp-route-name="terms"><strong> terms of service </strong></a>
                </h5>
            </div>


            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="submit" class="btn btn-success">Add Teacher</button>
                <a class="btn btn-light" asp-area="Lms" asp-controller="Schools" asp-action="Index">
                    <span class="fas fa-undo"></span>
                    Cancel
                </a>
            </div>

        </form>
    </div>
</div>




