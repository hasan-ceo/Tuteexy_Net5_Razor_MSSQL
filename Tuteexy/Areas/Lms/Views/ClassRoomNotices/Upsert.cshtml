@model Tuteexy.Models.ViewModels.ClassRoomNoticeVM

@{ var title = "Create Class Notice";
    ViewData["Title"] = title; }

@if (Model.ClassRoomNotice.ClassRoomNoticeID != 0)
{
    //edit
    title = "Edit Class Notice";
    ViewData["Title"] = title;
}

@section Scripts {
    <partial name="_tinymceScriptPartial" />
}

<div class="card">
    <div class="card-header">
        <div class="card-title">
            @if (Model.ClassRoomNotice.ClassRoomNoticeID != 0)
            {
                //edit
                title = "Edit Notice";
            }
            @title
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" autocomplete="off" asp-route-returnUrl="" asp-area="Lms" asp-controller="ClassRoomNotices" asp-action="Upsert">
            <input type="hidden" asp-for="ClassRoomNotice.ClassRoomNoticeID" />
            <input type="hidden" asp-for="ClassRoomNotice.ClassRoomID" />

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoomNotice.Title">Title</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="ClassRoomNotice.Title">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoomNotice.Description">Description</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="ClassRoomNotice.Description">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoomNotice.ScheduleDateTime">Schedule Date</label>
                <div class="col-sm-10">
                    <input class="form-control" type="date" asp-for="ClassRoomNotice.ScheduleDateTime">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ScheduleTime">Schedule Time</label>
                <div class="col-sm-10">
                    <input class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="ScheduleTime">
                </div>
            </div>


            <div class="btn-group" role="group" aria-label="Basic example">
                @if (Model.ClassRoomNotice.ClassRoomNoticeID != 0)
                {
    <button type="submit" class="btn btn-success" asp-route-id="@Model.ClassRoomNotice.ClassRoomNoticeID">
        <span class="fas fa-save"></span>
        Update
    </button> }
else
{
<button type="submit" class="btn btn-success">
    <span class="fas fa-save"></span>
    Create
</button>}
                <a class="btn btn-light" asp-area="Lms" asp-controller="ClassRooms" asp-action="Index">
                    <span class="fas fa-undo"></span>
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

