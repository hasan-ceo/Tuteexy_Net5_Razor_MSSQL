@model Tuteexy.Models.Holiday

@{ var title = "Create Holiday";
    ViewData["Title"] = title; }}

@if (Model.HolidayID != 0)
{
    //edit
    title = "Edit Holiday";
    ViewData["Title"] = title;
}



<div class="card">
    <div class="card-header">
        <div class="card-title">
            @if (Model.HolidayID != 0)
            {
                //edit
                title = "Edit Holiday";
            }
            @title
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" autocomplete="off" asp-route-returnUrl="" asp-area="Lms" asp-controller="Holidays" asp-action="Upsert">
            <input type="hidden" asp-for="HolidayID" />
            <input type="hidden" asp-for="SchoolID" />


            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="HolidayName">Name</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="HolidayName">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="DateStart">Date Start</label>
                <div class="col-sm-10">
                    <input id="datepicker" class="form-control" type="date" asp-for="DateStart">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="DateEnd">Date End</label>
                <div class="col-sm-10">
                    <input id="datepicker" class="form-control" type="date" asp-for="DateEnd">
                </div>
            </div>

            <div class="btn-group" role="group" aria-label="Basic example">
                @if (Model.HolidayID != 0)
                {
    <button type="submit" class="btn btn-success" asp-route-id="@Model.HolidayID">
        <span class="fas fa-save"></span>
        Update
    </button> }
else
{
<button type="submit" class="btn btn-success">
    <span class="fas fa-save"></span>
    Create
</button>}
                <button class="btn btn-light" asp-area="Lms" asp-controller="Schools" asp-action="Index">
                    <span class="fas fa-undo"></span>
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>