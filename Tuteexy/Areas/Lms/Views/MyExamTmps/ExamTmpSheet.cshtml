@model Tuteexy.Models.ExamTmpSheet
@{ ViewData["Title"] = "ExamTmp Details"; }

<partial name="_StatusMessage" for="@TempData["StatusMessage"]" />

<div class="row row-cols-1">
    <div class="col-12">
        <div class="card bg-secondary mb-2">
            <div class="card-body text-white">
                <h3 class="card-title">Exam Reply</h3>
            </div>
        </div>
    </div>
</div>

<div class="row row-cols-1">
    <div class="col-12">
        <div class="card bg-secondary mb-2">
            <div class="card-body text-white">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="card-title py-0 my-0">@Model.ExamTmp.Title</p>
                        </div>
                        <div class="col-md-6 text-center bg-white rounded">
                            <p class="card-title py-0 my-0 text-danger">@Model.ExmStatus</p>
                        </div>
                        <div class="col-md-6">
                            <p class="card-title py-0 my-0"><strong>ExamTmp #:</strong> @Model.ExamTmpID</p>
                            <p class="card-subtitle py-0 my-0"><strong>Post By:</strong> @Model.ExamTmp.TeacherName</p>
                            <p class="card-subtitle py-0 my-0"><strong>Subject:</strong> @Model.ExamTmp.Subject </p>
                        </div>
                        <div class="col-md-6">
                            <p class="card-title py-0 my-0"><strong>Marks:</strong> @Model.ExamTmp.ExmMarks</p>
                            <p class="card-subtitle py-0 my-0"><strong>Date Assigned:</strong> @Model.ExamTmp.DateAssigned.ToString("dd/MMM/yyyy hh:mm tt") </p>
                            <p class="card-subtitle"><strong>Date Due:</strong> @Model.ExamTmp.DateDue.ToString("dd/MMM/yyyy") </p>
                        </div>
                        <div class="col-md-12 mt-2">
                            @Html.Raw(Model.ExamTmp.Description)
                        </div>
                        <div class="col-md-12">
                            <div class="btn-group">
                                @if (string.IsNullOrWhiteSpace(Model.ExamTmp.EmailTo) == false && (string.IsNullOrEmpty(Model.ExamTmp.EmailTo) == false))
                                        {
                                            var eml= "mailto:"+Model.ExamTmp.EmailTo+"?cc="+Model.ExamTmp.EmailCc;
                                           <a href= @eml class="btn bg-examtmp-light">
                                <span class="fas fa-link">

                                </span>  <span>Send Answer</span>
                            </a>}

                                @if (string.IsNullOrWhiteSpace(Model.ExamTmp.RefLink1) == false && (string.IsNullOrEmpty(Model.ExamTmp.RefLink1) == false))
                                {
                            <a href="@Model.ExamTmp.RefLink1" class="btn bg-examtmp-light">
                                <span class="fas fa-link">

                                </span>  <span>At-1</span>
                            </a>}

                                @if (string.IsNullOrWhiteSpace(@Model.ExamTmp.RefLink2) == false && (string.IsNullOrEmpty(Model.ExamTmp.RefLink2) == false))
                                {
                            <a href="@Model.ExamTmp.RefLink2" class="btn bg-examtmp-light">
                                <span class="fas fa-link">

                                </span>  <span>At-2</span>
                            </a>}

                                @if (string.IsNullOrWhiteSpace(@Model.ExamTmp.RefLink3) == false && (string.IsNullOrEmpty(Model.ExamTmp.RefLink3) == false))
                                {
                            <a href="@Model.ExamTmp.RefLink3" class="btn bg-examtmp-light">
                                <span class="fas fa-link">

                                </span>  <span>At-3</span>
                            </a>}

                                @if (string.IsNullOrWhiteSpace(@Model.ExamTmp.RefLink4) == false && (string.IsNullOrEmpty(Model.ExamTmp.RefLink4) == false))
