@model IEnumerable<Tuteexy.Models.ViewModels.HomeworkSheetVM>


<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row justify-content-between">
                        <div class="col-6">
                            <h5 class="card-title">Homework Reply</h5>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tblData" class="table table-striped table-sm table-hover table-full-width table-font-size">
                            <thead class="thead-dark">
                                <tr>
                                    <th></th>
                                    <th>Status</th>
                                    <th>Class</th>
                                    <th>Subject</th>
                                    <th>Title</th>
                                    <th>Schedule Date</th>
                                    <th>Due Date</th>
                                    <th>Student Name</th>


                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @{
                                                    var tc = item.HWStatus == "Accepted" ? "success" : @item.HWStatus == "Submitted" ? "warning" : "danger";
                                                }
                                                <a class="btn btn-@tc" asp-area="Lms" asp-controller="Homeworks" asp-action="MarkUpdate" asp-route-id="@item.HomeworkSheetID" data-toggle="tooltip" data-placement="top" title="Marks">
                                                    <i class="far fa-edit"></i>
                                                </a>
                                            </td>
                                            <td>@item.HWStatus</td>
                                            <td>@item.ClassRoomName</td>
                                            <td>@item.Subject</td>
                                            <td>@item.Title</td>
                                            <td>@item.ScheduleDateTime.ToString("dd/MMM/yyyy")</td>
                                            <td>@item.DateDue.ToString("dd/MMM/yyyy")</td>
                                            <td>@item.StudentName</td>

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>

        $('#tblData').DataTable({
            "pageLength": 100,
            "ordering": false
        });

    </script>
}

