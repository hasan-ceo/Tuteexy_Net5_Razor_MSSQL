@model Tuteexy.Models.ViewModels.ClassworkVM

@{
    var title = "Create Classwork";
}

@section Scripts {
    <partial name="_tinymceScriptPartial" />
}

<div class="card">
    <div class="card-header">
        <div class="card-title">
            @if (Model.Classwork.ClassworkID != 0)
            {
                //edit
                title = "Edit Classwork";
            }
            @title
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" autocomplete="off" asp-route-returnUrl="">
            <input type="hidden" asp-for="Classwork.ClassworkID" />

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.ClassRoomID">Class Name</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Classwork.ClassRoomID, Model.ClassRoomList, "-Select a Class Room", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.Subject">Subject</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.Classwork.Subject, Model.SubjectList, "-Select a Subject", new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.Title">Title</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="Classwork.Title">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.Description">Description</label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Classwork.Description"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.RefLink1">Video Link</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="Classwork.RefLink1">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.RefLink2">Ref Link - 2</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="Classwork.RefLink2">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.RefLink3">Ref Link - 3</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="Classwork.RefLink3">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.RefLink4">Ref Link - 4</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="Classwork.RefLink4">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.RefLink5">Ref Link - 5</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="Classwork.RefLink5">
                </div>

            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.TimeStart">Class Date</label>
                <div class="col-sm-10">
                    <input id="datepicker" class="form-control" type="date" asp-for="Classwork.TimeStart">
                </div>

            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.TimeStart">Start Time</label>
                <div class="col-sm-10">
                    <input id="datepicker" class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="TimeStart">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="Classwork.TimeEnd">End Time</label>
                <div class="col-sm-10">
                    <input id="datepicker" class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="TimeEnd">
                </div>
            </div>

            <div class="btn-group" role="group" aria-label="Basic example">
                @if (Model.Classwork.ClassworkID != 0)
                {
                    <button type="submit" class="btn btn-success" asp-route-id="@Model.Classwork.ClassworkID">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-success">Create</button>
                }
                <button class="btn btn-light" asp-area="Lms" asp-controller="Classworks" asp-action="Index">Cancel</button>
            </div>
        </form>
    </div>
</div>



