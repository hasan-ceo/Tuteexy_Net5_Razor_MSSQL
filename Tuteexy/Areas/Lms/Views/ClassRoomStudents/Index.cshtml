@model IEnumerable<Tuteexy.Models.ClassRoomStudent>

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Student's List</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tblData" class="table table-striped table-sm table-hover table-full-width table-font-size">
                            <thead class="thead-dark">
                                <tr>

                                    <th><abbr title="Cls">Class Name</abbr></th>
                                    <th><abbr title="ID:">Student ID</abbr></th>
                                    <th><abbr title="Name:">Student Name</abbr></th>
                                    <th><abbr title="App by">Approved By</abbr></th>
                                    <th><abbr title="Is acc">Is Approved</abbr></th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (ClassRoomStudent item in Model)
                                {
                            <tr>
                                <td>@item.ClassRoom.ClassRoomName</td>
                                <td>@item.Student.UserName</td>
                                <td>@item.Student.Name</td>
                                <td>@item.ApprovedBy</td>
                                <td>@item.IsApproved</td>
                            </tr>            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
        <script>

            $('#tblData').DataTable({
                "pageLength": 100,
                "ordering": false
            });

    </script>
