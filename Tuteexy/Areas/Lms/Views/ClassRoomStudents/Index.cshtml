@model IEnumerable<Tuteexy.Models.ClassRoomStudent>
<!-- Top Breadcrumb -->
<div class="breadcrumb is-small is-white" aria-label="breadcrumbs">
    <ul>
        <li>
            <a asp-area="Lms"
               asp-controller="ClassRooms"
               asp-action="index"><strong>Stuent</strong></a>
        </li>
        <li class="is-active"><a href="#" class="has-text-white" aria-current="page"><strong>Index</strong></a></li>
    </ul>
</div>

<!-- Top Level -->
<div class="level">
    <!-- Left side -->
    <div class="level-left">
        <div class="level-item">
            <div class="title has-text-white">
                <strong>Student's List</strong>
            </div>
        </div>
    </div>

    <!-- Right side -->
    <div class="level-right">
        @*<div class="buttons has-addons is-centered">
                <a class="button is-warning" asp-area="Lms" asp-controller="Schools" asp-action="Upsert">Create</a>
            </div>*@
    </div>
</div>

<!-- Table -->
<div class="table-container has-background-info-light px-2 py-2 mb-0">
    <table id="tblData" class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth display compact">
        <thead class="has-background-grey-light">
            <tr>
                <th><abbr title="Cls">Class Name</abbr></th>
                <th><abbr title="ID:">Student ID</abbr></th>
                <th><abbr title="Name:">Student Name</abbr></th>
                <th><abbr title="App by">Approved By</abbr></th>
                <th><abbr title="Is acc">Is Approved</abbr></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (ClassRoomStudent item in Model)
            {
<tr>
    <td>@item.ClassRoom.ClassRoomName</td>
    <td>@item.Student.UserName</td>
    <td>@item.Student.Name</td>
    <td>@item.ApprovedBy</td>
    <td>@item.IsApproved</td>
    <td></td>
</tr>
            }
        </tbody>
    </table>
</div>




@section Scripts {
        <script>

            $('#tblData').DataTable({
                "pageLength": 100,
                "ordering": false
            });

    </script>
