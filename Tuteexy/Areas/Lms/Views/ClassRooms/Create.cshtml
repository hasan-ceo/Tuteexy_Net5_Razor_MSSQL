@model Tuteexy.Models.ClassRoom

@{ var title = "Create Classroom";
    var rd = false;
    ViewData["Title"] = title;}

@if (Model.ClassRoomID != 0)
{
    //edit
    title = "Edit Classroom";
    ViewData["Title"] = title;
}

<div class="card">
    <div class="card-header">
        <div class="card-title">
            @title
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" autocomplete="off" asp-route-returnUrl="">
            <input type="hidden" asp-for="ClassRoomID" />
            <input type="hidden" asp-for="SchoolID" />
            @if (Model.ClassRoomID != 0)
            {
                rd = true;
            }

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoomName">Name</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="ClassRoomName" readonly="@rd">
                </div>
            </div>

            <div class="btn-group" role="group" aria-label="Basic example">
                @if (Model.ClassRoomID != 0)
                {
    <button type="submit" class="btn btn-success" asp-route-id="@Model.ClassRoomID">
        <span class="fas fa-save"></span>
        Update
    </button> }
                else
                {
    <button type="submit" class="btn btn-success">
        <span class="fas fa-save"></span>
        Create
    </button>}
                <a class="btn btn-light" asp-area="Lms" asp-controller="Schools" asp-action="Index">
                    <span class="fas fa-undo"></span>
                    Cancel
                </a>
            </div>


        </form>
    </div>
</div>
