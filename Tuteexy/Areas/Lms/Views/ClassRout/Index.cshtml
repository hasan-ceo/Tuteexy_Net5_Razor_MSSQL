@{ ViewData["Title"] = "All Class Routine"; }

<partial name="_StatusMessage" for="@TempData["StatusMessage"]" />

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row justify-content-between">
                        <div class=" col-7">
                            <h5 class="card-title">Class Routine's List</h5>
                        </div>
                        <div class="col-3">
                            <a class="btn btn-success w-100" asp-area="Lms" asp-controller="ClassRout" asp-action="Upsert"><span class="fas fa-plus-circle"></span> New</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tblData" class="table table-striped table-sm table-hover table-full-width table-font-size">
                            <thead class="thead-dark">
                                <tr>
                                    <th></th>
                                    <th>Class Name</th>
                                    <th>Day</th>
                                    <th>Period - 1</th>
                                    <th>Period - 2</th>
                                    <th>Period - 3</th>
                                    <th>Period - 4</th>
                                    <th>Period - 5</th>
                                    <th>Period - 6</th>
                                    <th>Period - 7</th>
                                    <th>Period - 8</th>
                                    <th>Period - 9</th>
                                    <th>Period - 10</th>


                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/lms/classrout.js"></script>
    @* <partial name="_DeleteScriptsPartial" />*@
}
