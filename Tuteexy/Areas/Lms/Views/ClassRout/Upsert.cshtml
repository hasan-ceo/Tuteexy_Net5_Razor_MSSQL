@model Tuteexy.Models.ViewModels.ClassRoutineVM

@{
    var title = "Create Class Routine";
    var rd = false;
}

@section Scripts {
    <partial name="_tinymceScriptPartial" />
}

<div class="card">
    <div class="card-header">
        <div class="card-title">
            @if (Model.ClassRoutine.ClassRoutineID != 0)
            {
                //edit
                title = "Edit Class Routine";
            }
            @title
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" autocomplete="off" asp-route-returnUrl="">
            <input type="hidden" asp-for="ClassRoutine.ClassRoutineID" />

            @if (Model.ClassRoutine.ClassRoutineID != 0)
            {
                rd = true;
            }

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.ClassRoomID">Class Name</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.ClassRoutine.ClassRoomID, Model.ClassRoomList, "-Select a Class Room", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.DayName">Day</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.ClassRoutine.DayName, Model.DayList, "-Select a day", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.Period1">Period - 1</label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.ClassRoutine.Period1, Model.P1List, "-Select a Subject", new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <input class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="ClassRoutine.PeriodTime1">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.Period2">Period - 2</label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.ClassRoutine.Period2, Model.P2List, "-Select a Subject", new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <input class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="ClassRoutine.PeriodTime2">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.Period3">Period - 3</label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.ClassRoutine.Period3, Model.P3List, "-Select a Subject", new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <input class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="ClassRoutine.PeriodTime3">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.Period4">Period - 4</label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.ClassRoutine.Period4, Model.P4List, "-Select a Subject", new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <input class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="ClassRoutine.PeriodTime4">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.Period5">Period - 5</label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.ClassRoutine.Period5, Model.P5List, "-Select a Subject", new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <input class="form-control" type="time"  asp-format="{0:HH:mm}" asp-for="ClassRoutine.PeriodTime5">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.Period6">Period - 6</label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.ClassRoutine.Period6, Model.P6List, "-Select a Subject", new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <input class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="ClassRoutine.PeriodTime6">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.Period7">Period - 7</label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.ClassRoutine.Period7, Model.P7List, "-Select a Subject", new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <input class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="ClassRoutine.PeriodTime7">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.Period8">Period - 8</label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.ClassRoutine.Period8, Model.P8List, "-Select a Subject", new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <input class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="ClassRoutine.PeriodTime8">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.Period9">Period - 9</label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.ClassRoutine.Period9, Model.P9List, "-Select a Subject", new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <input class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="ClassRoutine.PeriodTime9">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="ClassRoutine.Period10">Period - 10</label>
                <div class="col-sm-7">
                    @Html.DropDownListFor(m => m.ClassRoutine.Period10, Model.P10List, "-Select a Subject", new { @class = "form-control" })
                </div>
                <div class="col-sm-3">
                    <input class="form-control" type="time" asp-format="{0:HH:mm}" asp-for="ClassRoutine.PeriodTime10">
                </div>
            </div>

            <div class="btn-group" role="group" aria-label="Basic example">
                @if (Model.ClassRoutine.ClassRoutineID != 0)
                {
                    <button type="submit" class="btn btn-success" asp-route-id="@Model.ClassRoutine.ClassRoutineID">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-success">Create</button>
                }
                <a class="btn btn-light" asp-area="Lms" asp-controller="ClassRout" asp-action="Index">Cancel</a>
            </div>


        </form>
    </div>
</div>