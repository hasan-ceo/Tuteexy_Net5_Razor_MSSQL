@model Tuteexy.Models.ViewModels.ChatVM
@{ ViewData["Title"] = "Live Class"; }

<style>
    div.scroll {
        margin: 4px, 4px;
        padding: 4px;
        background-color: green;
        width: 100%;
        height: 110px;
        overflow-x: hidden;
        overflow-y: auto;
        text-align: justify;
        padding: 20px;
        overflow-y:scroll;
    }

    div.messagebk {
        padding: 0.5em;
        border-radius: 1em;
        margin: 0.5em;
        line-height: 1.1em;
        background-color: white;
    }

    #scroller * {
        /* don't allow the children of the scrollable element to be selected as an anchor node */
        overflow-anchor: none;
    }

    #anchor {
        /* allow the final child to be selected as an anchor node */
        overflow-anchor: auto;
        /* anchor nodes are required to have non-zero area */
        height: 1px;
    }


</style>

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <div class="card bg-classwork">
                <div class="card-header">
                    <h5 class="card-title text-white">Live Class ID : @Model.GroupName</h5>
                    <input type="hidden" value="@Model.UserName" id="username" name="username" />
                    <input type="hidden" value="@Model.GroupName" id="groupname" name="groupname" />
                </div>
                <div class="card-body">
                    <div class="btn-group">
                        <button class="btn btn-success mr-1" id="joinButton"><span class="fas fa-plus-circle"></span> Join Class</button>
                        <button class="btn btn-success mr-1" id="leaveButton"><span class="fas fa-sign-out-alt"></span> Leave Class</button>
                        @*<a class="btn btn-light" asp-area="Lms" asp-controller="Classworks" asp-action="Classwork">
                            <span class="fas fa-undo"></span>
                            Cancel
                        </a>*@
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>



<div class="container-fluid p-0 my-0">
    <div class="row">
        <div class="col-12">
            <div id="messages" class="scroll bg-classwork" style="min-height: 50vh;overflow-y: scroll;">
                <div id="scroller">
                    <!-- append content here -->
                    <div id="anchor"></div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="container-fluid p-0 my-0">
    <div class="row">
        <div class="col-12">
            <div class="card bg-secondary rounded-0">
                <div class="card-body" id="msgdiv" hidden>
                    <form class="form-inline">
                        <div class="form-group mx-sm-3 mb-2">
                            <label class="sr-only">Message</label>
                            <input type="text" class="form-control" id="message" placeholder="">
                        </div>
                        <input type="button" id="sendButton" value="Send Message" class="btn btn-primary mb-2"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}

