@model IEnumerable<Tuteexy.Models.Holiday>
@{ ViewData["Title"] = "My Holidays List"; }
<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Holiday List</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tblData" class="table table-striped table-sm table-hover table-full-width table-font-size">
                            <thead class="thead-dark">
                                <tr>

                                    <th>School Name</th>
                                    <th>Date Start</th>
                                    <th>Date End</th>
                                    <th>Holiday Name</th>
                                    <th>Duration</th>



                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Holiday item in Model)
                                {
                    <tr>
                        <td>@item.School.SchoolName</td>
                        <td>@item.DateStart.Date.ToString("dd/MMM/yyyy")</td>
                        <td>@item.DateEnd.Date.ToString("dd/MMM/yyyy")</td>
                        <td>@item.HolidayName</td>
                        <td>@item.Duration</td>

                    </tr>
}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

