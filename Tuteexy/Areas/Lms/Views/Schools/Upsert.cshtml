@model Tuteexy.Models.School

@{ 
    var title = "Create School";
    var rd = false;
}

    <div class="box">


        <!-- Main container -->
        <div class="level">
            <!-- Left side -->
            <div class="level-left">
                <div class="level-item">
                    <div class="title has-text-black">
                        @if (Model.SchoolID != 0)
                        {
                            //edit
                            title = "Edit School";
                        }
                        <strong>@title</strong>
                    </div>
                </div>
            </div>

            <!-- Right side -->
            <div class="level-right">

            </div>
        </div>


                <form method="post" autocomplete="off" asp-route-returnUrl="">
                    <input type="hidden" asp-for="SchoolID" />
                    @if (Model.SchoolID != 0)
                    {
                        rd = true;
                    }

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label has-text-black level-left" asp-for="SchoolName">Name</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <p class="control is-expanded has-icons-left">
                                    <input class="input" type="text" placeholder="School Name" asp-for="SchoolName" readonly="@rd">
                                    <span asp-validation-for="SchoolName" class="help is-danger"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label has-text-black level-left" asp-for="StreetAddress">Street Address</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <p class="control is-expanded has-icons-left">
                                    <input class="input" type="text" placeholder="Street Address" asp-for="StreetAddress">
                                    <span asp-validation-for="StreetAddress" class="help is-danger"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label has-text-black level-left" asp-for="City">City</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <p class="control is-expanded has-icons-left">
                                    <input class="input" type="text" placeholder="City" asp-for="City">
                                    <span asp-validation-for="City" class="help is-danger"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label has-text-black level-left" asp-for="State">State</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <p class="control is-expanded has-icons-left">
                                    <input class="input" type="text" placeholder="State" asp-for="State">
                                    <span asp-validation-for="State" class="help is-danger"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label has-text-black level-left" asp-for="PostalCode">Postal Code</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <p class="control is-expanded has-icons-left">
                                    <input class="input" type="text" placeholder="Postal Code" asp-for="PostalCode">
                                    <span asp-validation-for="PostalCode" class="help is-danger"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label has-text-black level-left" asp-for="PhoneNumber">Phone Number</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <p class="control is-expanded has-icons-left">
                                    <input class="input" type="text" placeholder="Phone Number" asp-for="PhoneNumber">
                                    <span asp-validation-for="PhoneNumber" class="help is-danger"></span>
                                </p>
                            </div>
                        </div>
                    </div>


                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label has-text-black"></label>
                        </div>
                        <div class="field-body">
                            <div class="field is-grouped">
                                @if (Model.SchoolID != 0)
                                {
                    <div class="control">
                        <button type="submit" class="button is-success" asp-route-id="@Model.SchoolID">Update</button>
                    </div> }
                else
                {
    <div class="control">
        <button type="submit" class="button is-success">Create</button>
    </div>}
                                <div class="control">
                                    <button class="button is-link is-light" asp-area="Lms" asp-controller="Schools" asp-action="Index">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>


    </div>

