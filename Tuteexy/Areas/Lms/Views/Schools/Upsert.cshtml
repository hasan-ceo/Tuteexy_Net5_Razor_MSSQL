@model Tuteexy.Models.School

@{ var title = "Create School";
                var rd = false; }

<div class="card">
    <div class="card-header">
        <div class="card-title">
            @if (Model.SchoolID != 0)
            {
                //edit
                title = "Edit School";
            }
            @title
        </div>
    </div>
    <div class="card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" autocomplete="off" asp-route-returnUrl="">
            <input type="hidden" asp-for="SchoolID" />
            @if (Model.SchoolID != 0)
            {
                rd = true;
            }

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="SchoolName">Name</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="SchoolName" readonly="@rd">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="StreetAddress">Street Address</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="StreetAddress">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="City">City</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="City">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="State">State</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="State">
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="PostalCode">Postal Code</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="PostalCode">
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="PhoneNumber">Phone Number</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="PhoneNumber">
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="City">City</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" asp-for="City">
                </div>
            </div>

            <div class="btn-group" role="group" aria-label="Basic example">
                @if (Model.SchoolID != 0)
                {
    <button type="submit" class="btn btn-success" asp-route-id="@Model.SchoolID">Update</button> }
else
{
    <button type="submit" class="btn btn-success">Create</button>}
                <a class="btn btn-light" asp-area="Lms" asp-controller="Schools" asp-action="Index">Cancel</a>
            </div>


        </form>
    </div>
</div>
