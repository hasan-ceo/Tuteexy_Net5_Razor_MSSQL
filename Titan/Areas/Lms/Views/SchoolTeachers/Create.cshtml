@model Titan.Models.ClassRoom

@{
    var title = "Create Class Room";
    var rd = false;
}

<div class="breadcrumb is-small is-white" aria-label="breadcrumbs">
    <ul>
        <li>
            <a asp-area="Lms"
               asp-controller="ClassRooms"
               asp-action="index"><strong>Class Rooms</strong></a>
        </li>
        <li class="is-active"><a href="#" class="has-text-white" aria-current="page"><strong>Create</strong></a></li>
    </ul>
</div>
<!-- Main container -->
<div class="level">
    <!-- Left side -->
    <div class="level-left">
        <div class="level-item">
            <div class="title has-text-white">
                @if (Model.ClassRoomID != 0)
                {
                    //edit
                    title = "Edit Page";
                }
                <strong>@title</strong>
            </div>
        </div>
    </div>

    <!-- Right side -->
    <div class="level-right">

    </div>
</div>

<div class="columns is-multiline">
    <div class="column is-9">
        <form method="post" autocomplete="off" asp-route-returnUrl="">
            <input type="hidden" asp-for="ClassRoomID" />
            <input type="hidden" asp-for="SchoolID" />
            @if (Model.ClassRoomID != 0)
            {
                rd = true;
            }

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label has-text-white" asp-for="ClassRoomName">Class Room Name</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control is-expanded has-icons-left">
                            <input class="input" type="text" placeholder="Class Room Name" asp-for="ClassRoomName" readonly="@rd">
                            <span asp-validation-for="ClassRoomName" class="help is-danger"></span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label has-text-white"></label>
                </div>
                <div class="field-body">
                    <div class="field is-grouped">
                        @if (Model.ClassRoomID != 0)
                        {
                            <div class="control">
                                <button type="submit" class="button is-link" asp-route-id="@Model.ClassRoomID">Update</button>
                            </div> }
                        else
                        {
                            <div class="control">
                                <button type="submit" class="button is-link">Create</button>
                            </div>}
                        <div class="control">
                            <button class="button is-link is-light" asp-area="Lms" asp-controller="ClassRooms" asp-action="Index">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



